generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}


datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
   USER
  TELECONSULTER
  HEALTHCARE_FACILITY
}

model User {
  id                Int                @id @default(autoincrement())
  first_name        String?
  last_name         String?
  email             String             @unique
  password          String
  location          String?
  phone             String?
  role              Role               @default(USER)
  appointments      Appointment[]
  teleconsultations Teleconsultation[]
  notifications     Notification[]
  transactions      Transaction[]
  session           Session[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  @@index([userId])
}

model HealthcareFacility {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  services  String
  hours     String
  contact   String
  type      String
  appointments Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  facility  HealthcareFacility @relation(fields: [facilityId], references: [id])
  teleconsultation Teleconsultation @relation(fields: [teleconsultationId], references: [id])
  facilityId Int
  teleconsultationId Int
  status    String
  transactions Transaction[]

  @@index([userId])
  @@index([facilityId])
  @@index([teleconsultationId])
}

model MedicalInformation {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  keywords  String
  category  String
  author    String
}

model EmergencyService {
  id        Int      @id @default(autoincrement())
  name      String
  contact   String
  location  String
}

model HealthTip {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String
  author    String
}

model Teleconsultation {
  id        Int      @id @default(autoincrement())
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  doctor    String
  status    String
  transactions Transaction[]
  appointments Appointment[]

  @@index([userId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  content   String
  date      DateTime

  @@index([userId])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  appointment Appointment? @relation(fields: [appointmentId], references: [id])
  appointmentId Int?
  teleconsultation Teleconsultation? @relation(fields: [teleconsultationId], references: [id])
  teleconsultationId Int?
  tx_ref    String   @unique
  status    String

  @@index([userId])
  @@index([appointmentId])
  @@index([teleconsultationId])
}